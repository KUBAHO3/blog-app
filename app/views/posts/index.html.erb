<%= render 'shared/user_card', user: @users, user_card_class: 'user_card no_hover' %>

<ul class='post_list'>
  <% if @users.posts.empty? %>
    <p class='user_empty-message'>No posts yet!</p>
  <% else %>
    <% @users.most_recent_three_posts.each do |post| %>
      <li class='post_list_item'>
        <%= render 'shared/post_card', post: post %>
        <ul class='post_comment_list'>
          <% if post.comments.empty? %>
            <p class='comment_empty-message'>No comments yet!</p>
          <% else %>
            <% @posts.each do |comment| %>
              <li class='post_comment_list_item'>
                <%= render 'shared/comment_card', comment: comment %>
              </li>
            <% end %>
          <% end %>
        </ul>
      </li>
    <% end %>
  <% end %>
</ul>